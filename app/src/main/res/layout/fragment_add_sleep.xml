<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/add_sleep_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"/>

    <EditText
        android:id="@+id/add_sleep_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date (dd/mm/yy)"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/add_sleep_toBedTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bed time(hh:mm)"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/add_sleep_awakeTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wake up time(hh:mm)"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/add_sleep_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="add"/>

</LinearLayout>